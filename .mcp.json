{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "./"]
    },
    "node-runner": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "mcp-node"],
      "env": {}
    },
    "nx": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "nx-mcp", "./"],
      "env": {}
    },
    "github": {
      "command": "./tools/mcp/github.sh"
    },
    "git": {
      "command": "./tools/mcp/git.sh"
    }
  }
}
