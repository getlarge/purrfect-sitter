{
  "name": "@purrfect-sitter/purrfect-sitter",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "nx": {
    "name": "purrfect-sitter",
    "tags": [
      "type:app"
    ],
    "type": "app",
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "buildLibsFromSource": false,
          "platform": "node",
          "outputPath": "apps/purrfect-sitter/dist",
          "format": [
            "esm"
          ],
          "bundle": false,
          "main": "apps/purrfect-sitter/src/main.ts",
          "tsConfig": "apps/purrfect-sitter/tsconfig.app.json",
          "assets": [
            "apps/purrfect-sitter/src/assets"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "serve": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "purrfect-sitter:build",
          "runBuildTargetDependencies": true
        },
        "configurations": {
          "development": {
            "buildTarget": "purrfect-sitter:build:development"
          },
          "production": {
            "buildTarget": "purrfect-sitter:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "create-auth-model": {
        "executor": "@nx/workspace:run-commands",
        "options": {
          "command": "FGA_STORE_ID=$(fga store create --name=purrfect-sitter | jq -r '.store.id') fga model write --file=purrfect-sitter-model.fga "
        }
      },
      "gen-lockfile": {
        "dependsOn": [
          "build"
        ],
        "command": "node tools/scripts/lockfile.mjs apps/purrfect-sitter"
      },
      "container": {
        "executor": "@nx-tools/nx-container:build",
        "dependsOn": [
          "lint:docker",
          "gen-lockfile"
        ],
        "options": {
          "engine": "docker",
          "metadata": {
            "tags": [
              "purrfect-sitter:latest"
            ]
          }
        },
        "configurations": {
          "production": {
            "metadata": {
              "tags": [
                "purrfect-sitter:latest"
              ]
            }
          },
          "test": {
            "metadata": {
              "tags": [
                "purrfect-sitter:test"
              ]
            }
          },
          "ci": {
            "metadata": {
              "tags": [
                "purrfect-sitter:ci"
              ]
            }
          }
        }
      }
    }
  },
  "dependencies": {
    "@fastify/autoload": "~6.0.3",
    "@fastify/cookie": "^11.0.2",
    "@fastify/sensible": "~6.0.2",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.57.1",
    "@opentelemetry/sdk-node": "^0.200.0",
    "@purrfect-sitter/auth-middlewares": "0.0.1",
    "@purrfect-sitter/auth-repositories": "0.0.1",
    "@purrfect-sitter/cat-sittings-services": "0.0.1",
    "@purrfect-sitter/cats-services": "0.0.1",
    "@purrfect-sitter/database": "0.0.1",
    "@purrfect-sitter/models": "0.0.1",
    "@purrfect-sitter/reviews-services": "0.0.1",
    "@sinclair/typebox": "^0.34.33",
    "fastify": "~5.2.1",
    "fastify-plugin": "~5.0.1",
    "@purrfect-sitter/cats-repositories": "file:../../cats/repositories",
    "@purrfect-sitter/cat-sittings-repositories": "file:../../cat-sittings/repositories",
    "@purrfect-sitter/reviews-repositories": "file:../../reviews/repositories",
    "@purrfect-sitter/users-repositories": "file:../../users/repositories",
    "@openfga/sdk": "^0.8.0",
    "@swc/helpers": "~0.5.11",
    "@ory/kratos-client": "^1.3.8",
    "drizzle-orm": "^0.41.0",
    "drizzle-kit": "^0.30.6",
    "pg": "^8.14.1",
    "pino-pretty": "^13.0.0",
    "pino": "9.6.0"
  }
}
