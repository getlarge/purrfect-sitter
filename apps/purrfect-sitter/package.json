{
  "name": "@purrfect-sitter/purrfect-sitter",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "nx": {
    "name": "purrfect-sitter",
    "tags": [
      "type:app"
    ],
    "type": "app",
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "buildLibsFromSource": false,
          "platform": "node",
          "outputPath": "dist/apps/purrfect-sitter",
          "format": [
            "esm"
          ],
          "bundle": false,
          "main": "apps/purrfect-sitter/src/main.ts",
          "tsConfig": "apps/purrfect-sitter/tsconfig.app.json",
          "assets": [
            "apps/purrfect-sitter/src/assets"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "serve": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "purrfect-sitter:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "purrfect-sitter:build:development"
          },
          "production": {
            "buildTarget": "purrfect-sitter:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  }
}
