{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.mjs",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.(m)[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s"
    ],
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml"]
  },
  "nxCloudId": "67be24a9bc2e243ad1706f49",
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": false
      },
      "exclude": [
        "libs/zap-mcp/zap-service/*",
        "libs/zap-mcp/behavioral-patterns/*",
        "libs/zap-mcp/pattern-executor/*"
      ]
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "test"
      },
      "exclude": ["apps/purrfect-sitter-e2e/**/*"]
    },
    {
      "plugin": "@nx-tools/nx-container",
      "options": {
        "defaultEngine": "docker",
        "defaultRegistry": "docker.io"
      }
    },
    {
      "plugin": "@nx/js/typescript",
      "include": [
        "libs/zap-mcp/zap-service/*",
        "libs/zap-mcp/behavioral-patterns/*",
        "libs/zap-mcp/pattern-executor/*"
      ],
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json"
        }
      }
    }
  ],
  "targetDefaults": {
    "@nx/esbuild:esbuild": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "lint": {
      "configurations": {
        "development": {
          "args": ["-c", "eslint.config.mjs"]
        },
        "fix": {
          "args": ["-c", "eslint.config.mjs", "--fix"]
        }
      },
      "defaultConfiguration": "development"
    },
    "test": {
      "dependsOn": ["^build"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "@nx/js:swc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    }
  },
  "conformance": {
    "rules": [
      {
        "rule": "libs/infra/conformance/dist/no-project-json",
        "projects": ["*"]
      },
      {
        "rule": "libs/infra/conformance/dist/no-jest-workers-in-ci",
        "options": {
          "testTargetNames": ["test"]
        },
        "projects": ["*"]
      }
    ]
  },
  "release": {
    "version": {
      "preVersionCommand": "npx nx run-many -t build"
    }
  }
}
